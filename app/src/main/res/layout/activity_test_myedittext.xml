<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.s.z.j.test.MyEdittext
        android:id="@+id/test_myedittext_edittext"
        android:layout_width="match_parent"
        android:layout_height="50dp">
    </com.s.z.j.test.MyEdittext>
    <Button
        android:id="@+id/test_myedittext_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="获取上面的内容显示在下面"
        />
    <EditText
        android:id="@+id/test_myedittext_2_edittext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <com.s.z.j.textquee.MarqueeText
        android:id="@+id/marqueeText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:textColor="@android:color/white"
        android:padding="10dip"
        android:background="#b0000000"
        android:textSize="20sp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:background="#00ff00"
            android:layout_height="50dp"
            android:layout_weight="1"></LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:background="#ff00ff"
            android:layout_height="50dp"
            android:layout_weight="1">
            <TextView
                android:id="@+id/test_myedittext_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="3453452345324"
                android:layout_gravity="center"
                android:gravity="right"
                android:layout_marginRight="30dp"
                />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>